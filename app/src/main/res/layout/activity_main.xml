<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bg"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:id="@+id/layout_header_hub"
        app:layout_constraintBottom_toTopOf="@id/layout_crypto"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_23sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_hub"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_35sdp"
            android:paddingStart="@dimen/_35sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:text="@string/hub"
            android:fontFamily="@font/affect_bold"
            android:textColor="@color/color_primary"
            android:textSize="@dimen/_20ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_crypto"
        app:layout_constraintTop_toTopOf="@id/layout_header_hub"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:background="@drawable/background_crypto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layout_btc_course"
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text_btc"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="@string/btc"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/_20ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_eth_course"
            android:padding="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/text_eth"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/ubuntu_bold"
                android:text="@string/eth"
                android:textColor="@color/color_primary"
                android:textSize="@dimen/_20ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_chart"
        app:layout_constraintTop_toBottomOf="@id/layout_crypto"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:background="@drawable/background_hub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_chart"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_90sdp"
            android:text="@string/chart"
            android:fontFamily="@font/ubuntu_bold"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_20ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image_chart"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_80sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_pie_chart"
            app:tint="@color/color_context"
            android:backgroundTint="@color/color_primary"
            android:contentDescription="@string/app_name"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_note_hub"
        app:layout_constraintTop_toBottomOf="@id/layout_chart"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:background="@drawable/background_hub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        android:id="@+id/text_note_hub"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_90sdp"
        android:text="@string/notes_hub"
        android:fontFamily="@font/ubuntu_bold"
        android:textColor="@color/color_white"
        android:textSize="@dimen/_20ssp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image_note_hub"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_80sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_note"
            app:tint="@color/color_context"
            android:backgroundTint="@color/color_primary"
            android:contentDescription="@string/app_name"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>